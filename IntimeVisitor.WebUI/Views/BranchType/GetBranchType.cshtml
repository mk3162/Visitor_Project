@model IntimeVisitor.Entities.Domain.BranchType

@{
    ViewBag.Title = "GetBranchType";
    Layout = "~/Views/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateBranchType", "BranchType", FormMethod.Post))
{
    <div class="container">
        <h3 class="d-flex justify-content-center">Firma Tip Güncelle</h3>

        <div class="col-12">
            <div class="form-group">
                @Html.HiddenFor(m => m.Id, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Şube Tip Adı :</label>
                @Html.TextBoxFor(m => m.BranchTypeName, new { @class = "form-control" })
            </div>
            <div class="form-group col-2">
                <label for="message-text" class="col-form-label">
                    Kullanım Durumu :
                </label>
                @Html.CheckBoxFor(m => m.Status, new { @class = "form-control" })
            </div>
        </div>
        <div>
            <a href="/BranchType/BranchType" class="btn btn-secondary">Geri</a>
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </div>
}

