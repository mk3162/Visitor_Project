@model IntimeVisitor.Entities.Domain.UserType
@{
    ViewBag.Title = "GetType";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Kullanıcı Tip Güncelle</h3>
@using (Html.BeginForm("Update", "UserType", FormMethod.Post))
{
<div class="col-12">
    <div class="form-group">
        <div class="form-group">


            @Html.HiddenFor(m => m.Id, new { @class = "form-control"})

        </div>
        <div class="form-group">
            <label for="message-text" class="col-form-label">Tip Adı :</label>
            @Html.TextBoxFor(m => m.UserTypeName, new { @class = "form-control" })

        </div>
        <div class="form-group col-2">
            <label for="message-text" class="col-form-label">
                Kullanım Durumu :

            </label>
            @Html.CheckBoxFor(m => m.Status, new { @class = "form-control" })
        </div>
       
    </div>
    <div class="modal-footer">
        <a href="/UserType/UserType" class="btn btn-secondary">Kapat</a>
      
        <button class="btn btn-primary">Kaydet</button>
    </div>

</div>
}

