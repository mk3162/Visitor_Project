@model IntimeVisitor.Entities.Domain.CompanyType
@{
    ViewBag.Title = "GetCompanyType";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />

@using (Html.BeginForm("UpdateCompanyType", "CompanyTypes", FormMethod.Post))
{
    <div class="container">
        <h3 class="d-flex justify-content-center">Firma Tip Güncelle</h3>
        <div class="col-12">
            <div class="form-group">
                @Html.HiddenFor(m => m.Id, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Firma Tip Adı :</label>
                @Html.TextBoxFor(m => m.CompanyTypeName, new { @class = "form-control" })
            </div>
            <div class="form-group col-2">
                <label for="message-text" class="col-form-label">
                    Kullanım Durumu :
                </label>
                @Html.CheckBoxFor(m => m.Status, new { @class = "form-control" })
            </div>
            <div>
                <a href="/CompanyTypes/CompanyType" class="btn btn-secondary">Kapat</a>
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
}

























