@model IntimeVisitor.Entities.Domain.Branch
@{
    ViewBag.Title = "GetBranch";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Şube Bilgileri Güncelle</h3>
@using (Html.BeginForm("UpdateBranch", "Branch", FormMethod.Post))
{
<div class="modal-body col-12 ">
    <div class="form-group">
        @Html.HiddenFor(m => m.Id, new { @class ="form-control" })
    </div>
    <div class="form-group">
        <label for="message-text" class="col-form-label">Şube Adı :</label>
        @Html.TextBoxFor(v => v.BranchName, new { @class = "form-control" })
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="message-text" class="col-form-label">E-Posta :</label>
            @Html.TextBoxFor(v => v.BranchEMail, new { @class = "form-control" })
        </div>
        <div class="form-group col-6">
            <label for="message-text" class="col-form-label">Telefon No :</label>
            @Html.TextBoxFor(v => v.BranchPhoneNumber, new { @class = "form-control" })
        </div>
    </div>
<div class="form-group">
    <label for="message-text" class="col-form-label">Firma :</label>
    @Html.DropDownList("CompanyId", ViewBag.cmp as IEnumerable<SelectListItem>, new { @class = "dropdown form-control" })
</div>
<div class="form-group">
    <label for="message-text" class="col-form-label">Şube Tipi :</label>
    @Html.DropDownList("BranchtypeId", ViewBag.Btype as IEnumerable<SelectListItem>, new { @class = "dropdown form-control" })
</div>
    <div class="form-group">
        <label for="message-text" class="col-form-label">Adres :</label>
        @Html.DropDownList("AddressId", ViewBag.address as IEnumerable<SelectListItem>, new { @class = "dropdown form-control" })
    </div>
</div>
    <div class="modal-footer">
        <a href="/Branch/Branch" class="btn btn-secondary">Kapat</a>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
}

