@model IntimeVisitor.Entities.Domain.Permision
@{
    ViewBag.Title = "PermisionGet";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Yetki / İzin  Güncelle</h3>
@using (Html.BeginForm("PermisionUpdate", "Permision", FormMethod.Post))
{
    <div class="col-12">
        <div class="form-group">
            <div class="form-group">
                @Html.HiddenFor(m => m.Id, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Tip Adı :</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Tip Adı :</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })

            </div>          
        </div>
        <div class="modal-footer">
            <a href="/Permision/Permisions" class="btn btn-secondary">Kapat</a>          
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </div>
}

